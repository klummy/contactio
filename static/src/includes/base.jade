doctype
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    block title
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel='stylesheet', href='styles/app.css')
    
    block extrastyles
  body
    include ../images/logo/logo.svg
    //- <svg class="icon icon-contactio-logo"><use xlink:href="#icon-contactio-logo"></use></svg>
    //- svg.icon.icon-contactio-logo
    //-   use(xlink:href="#icon-contactio-logo")
  
    <!--[if lt IE 8]>
    p.browsehappy
      | You are using an <strong>outdated</strong> browser.
      | Please <a href="http://browsehappy.com/">upgrade your browser</a>
      | to improve your experience.
    <![endif]-->
    
    include nav.jade
    
    div.container
      //- FAB
      div.fixed-action-btn(style="bottom: 45px; right: 24px;")
        a.btn-floating.btn-large.red.modal-trigger(href="#addContact" title="Add contact")
          i.large.material-icons add
          
      //- Add contact modal
      form#addContact.modal.modal-fixed-footer
        div.modal-content.row
          h4 Add Contact
          div.input-field.col.s12.m6
            i.material-icons.prefix account_circle
            input.validate(placeholder="First Name" name="" type="text")
            label(for="") First Name
            
          div.input-field.col.s12.m6
            i.material-icons.prefix account_circle
            input.validate(placeholder="Last Name" name="" type="text")
            label(for="") Last Name
            
          div.input-field.col.s12.m6.l6
            i.material-icons.prefix email
            input.validate(placeholder="Email" name="" type="email")
            label(for="") Email
            
          div.input-field.col.s12.m6.l6
            i.material-icons.prefix phone
            input.validate(placeholder="Phone Number" name="" type="email")
            label(for="") Phone Number
            
          
        div.modal-footer
          button.btn.modal-action.waves-effect.waves-green(href="#!" type="submit" onclick="Materialize.toast('New contact added', 4000)") Add
          //- On add, success notification is shown
          a.btn-flat.modal-action.modal-close.waves-effect(href="#!") Cancel
      
      block content
    
    block extrajs
    
    script(src="https://code.jquery.com/jquery-2.1.1.min.js")
    script(src="scripts/app.js")
    script.
      $(document).ready(function(){
        $('.modal-trigger').leanModal();
      });
